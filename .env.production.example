# Production Environment Variables Template
# Copy this to .env.production and fill in actual values
# NEVER commit .env.production to git!

# Database Configuration
DB_NAME=yy_beauty_salon
DB_USER=salon_admin
DB_PASSWORD=<use generated strong password - min 32 chars>
DB_HOST=<your-production-db-host>  # e.g., db.example.com
DB_PORT=5432

# Prisma Database URL (update with production host)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?sslmode=require

# Server Configuration
PORT=8000
NODE_ENV=production

# Redis Configuration (use managed Redis in production)
REDIS_URL=redis://default:<redis-password>@<redis-host>:6379
REDIS_PASSWORD=<use generated strong password - min 32 chars>

# JWT Configuration (MUST be different from dev/staging)
JWT_SECRET=<use generated 64-byte hex string>
JWT_REFRESH_SECRET=<use generated 64-byte hex string - different from JWT_SECRET>
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Twilio Configuration
TWILIO_ACCOUNT_SID=<your-twilio-account-sid>
TWILIO_AUTH_TOKEN=<your-twilio-auth-token>
TWILIO_PHONE_NUMBER=<your-twilio-phone-number>

# Frontend URL (your production domain)
FRONTEND_URL=https://your-domain.com

# Email Configuration (for production notifications)
SMTP_HOST=<smtp-host>
SMTP_PORT=587
SMTP_USER=<smtp-username>
SMTP_PASSWORD=<smtp-password>
EMAIL_FROM=noreply@your-domain.com

# Security
CORS_ORIGIN=https://your-domain.com
SESSION_SECRET=<use generated 64-byte hex string>
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Logging
SENTRY_DSN=<optional-sentry-dsn>
LOG_LEVEL=error  # production should use 'error' or 'warn'

# Storage (if using cloud storage)
STORAGE_PROVIDER=s3  # or 'azure', 'gcs'
S3_BUCKET=<bucket-name>
S3_REGION=<region>
S3_ACCESS_KEY=<access-key>
S3_SECRET_KEY=<secret-key>

# SSL/TLS
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
